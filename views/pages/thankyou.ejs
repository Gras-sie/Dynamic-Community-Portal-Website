<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head', {title}) %>
</head>
<body>
    <%- include('../partials/header') %>
    
    <div class="container main-container">
        <div class="row">
            <div class="col-lg-8 mx-auto text-center">
                <div class="mb-5">
                    <i class="fas fa-check-circle text-success" style="font-size: 5rem;"></i>
                </div>
                <h1>Thank You!</h1>
                <p class="lead mb-5">We've received your message and will get back to you soon.</p>
                
                <% if (submission) { %>
                    <div class="card shadow-sm mt-4">
                        <div class="card-header bg-light">
                            <h4 class="mb-0">Your Submission Details</h4>
                        </div>
                        <div class="card-body text-start">
                            <dl class="row">
                                <dt class="col-sm-3">Name:</dt>
                                <dd class="col-sm-9"><%= submission.name %></dd>
                                
                                <dt class="col-sm-3">Email:</dt>
                                <dd class="col-sm-9"><%= submission.email %></dd>
                                
                                <dt class="col-sm-3">Message:</dt>
                                <dd class="col-sm-9"><%= submission.message %></dd>
                                
                                <dt class="col-sm-3">Submitted:</dt>
                                <dd class="col-sm-9"><small class="text-muted"><%= submission.date.toLocaleString() %></small></dd>
                            </dl>
                        </div>
                    </div>
                <% } %>
                
                <div class="mt-5">
                    <a href="/" class="btn btn-primary me-2">
                        <i class="fas fa-home me-2"></i>Return to Home
                    </a>
                    <a href="/events" class="btn btn-outline-primary">
                        <i class="fas fa-calendar-alt me-2"></i>Explore Events
                    </a>
                </div>
            </div>
        </div>
    </div>

    <%- include('../partials/footer') %>
</body>
</html>