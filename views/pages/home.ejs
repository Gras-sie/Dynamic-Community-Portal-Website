<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head', {title}) %>
</head>
<body>
    <%- include('../partials/header') %>
    
    <section class="hero">
        <div class="container">
            <h1>Welcome to Our Community Portal</h1>
            <p>Join us for exciting events and connect with like-minded people!</p>
            <div class="mt-4">
                <a href="/events" class="btn btn-accent"><i class="fas fa-calendar-alt me-2"></i>Browse All Events</a>
                <a href="/contact" class="btn btn-outline-light ms-2"><i class="fas fa-envelope me-2"></i>Contact Us</a>
            </div>
        </div>
    </section>

    <div class="container main-container">
        <h2 class="section-heading">Upcoming Events</h2>
        
        <div class="row">
            <% upcomingEvents.forEach(event => { %>
                <div class="col-md-6">
                    <div class="card">
                        <img src="/images/<%= event.image %>" class="card-img-top" alt="<%= event.title %>">
                        <div class="card-body">
                            <span class="date-badge"><i class="far fa-calendar-alt me-1"></i><%= event.date %></span>
                            <span class="location-badge"><i class="fas fa-map-marker-alt me-1"></i><%= event.location %></span>
                            <h5 class="card-title"><%= event.title %></h5>
                            <a href="/events" class="btn btn-outline-primary mt-2">Learn More</a>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
        
        <div class="text-center mt-5">
            <a href="/events" class="btn btn-primary">View All Events</a>
        </div>
        
        <section class="mt-5 pt-5">
            <h2 class="section-heading text-center mb-4">Community Highlights</h2>
            <p class="text-center mb-5">Explore our past successful events and community gatherings</p>
            
            <div class="row g-4">
                <% if (pastEvents && pastEvents.length > 0) { %>
                    <% pastEvents.forEach(event => { %>
                        <div class="col-md-4">
                            <div class="card h-100">
                                <div class="card-body">
                                    <h4 class="card-title"><%= event.title %></h4>
                                    <p class="text-muted mb-2">
                                        <i class="far fa-calendar-alt me-2"></i><%= event.date %><br>
                                        <i class="fas fa-map-marker-alt me-2"></i><%= event.location %><br>
                                        <i class="fas fa-users me-2"></i><%= event.attendees %> attendees
                                    </p>
                                    <p class="card-text"><%= event.description %></p>
                                    <div class="mt-3">
                                        <strong>Key Highlights:</strong>
                                        <p class="mb-0 text-success"><%= event.highlights %></p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <% }) %>
                <% } else { %>
                    <div class="col-12 text-center">
                        <p>No past events to display</p>
                    </div>
                <% } %>
            </div>
        </section>
    </div>

    <%- include('../partials/footer') %>
</body>
</html>