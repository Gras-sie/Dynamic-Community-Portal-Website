<footer class="bg-dark text-white mt-5">
  <div class="container py-4">
    <div class="row">
      <div class="col-md-6">
        <h5>About the Community Portal</h5>
        <p>Empowering our neighborhood with technology and information.</p>
      </div>
      <div class="col-md-6 text-md-end">
        <h5>Connect with Us</h5>
        <a href="#" class="text-white me-3"><i class="fab fa-facebook"></i></a>
        <a href="#" class="text-white me-3"><i class="fab fa-twitter"></i></a>
        <a href="#" class="text-white"><i class="fab fa-instagram"></i></a>
      </div>
    </div>

    <div class="row mt-4">
      <div class="col-12">
        <p class="lead mb-5">We've received your message and will get back to you soon.</p>

        <% if (typeof submission !== 'undefined' && submission) { %>
          <div class="card shadow-sm mt-4">
            <div class="card-header bg-light">
              <h4 class="mb-0">Your Submission Details</h4>
            </div>
            <div class="card-body">
              <p><strong>Name:</strong> <%= submission.name %></p>
              <p><strong>Email:</strong> <%= submission.email %></p>
              <p><strong>Message:</strong> <%= submission.message %></p>
              <p><strong>Date:</strong> <%= new Date(submission.date).toLocaleString() %></p>
            </div>
          </div>
        <% } %>
      </div>
    </div>
  </div>

  <div class="text-center py-3 bg-secondary mt-4">
    <small>&copy; <%= new Date().getFullYear() %> Community Portal. All rights reserved.</small>
  </div>
</footer>
